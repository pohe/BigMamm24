@page
@model RazorBigMamma.Pages.Customers.IndexModel
@{
    ViewData["Title"] = "List Customers";
}

<h1>List of customers</h1>

<p>
    <a asp-page="CreateCustomer">Create a new customer</a>
</p>

<form>
    search: <input type="text" asp-for="@Model.FilterCriteria" />
    <input type="submit" value="Filter" />
</form>


<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Address</th>
            <th>Mobile</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Customers)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Name</td>
                <td>@item.Address</td>
                <td>@item.Mobile</td>
                <td><a asp-page="EditCustomer" asp-route-id="@item.Id">Edit</a></td>
                <td><a asp-page="DeleteCustomer" asp-route-deleteId="@item.Id">Delete</a></td>
            </tr>
        }
    </tbody>
</table>
